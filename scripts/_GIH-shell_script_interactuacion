sensor2 = BH1750.BH1750(i2c,BH1750._BH1750_ALT_ADDRESS)


while True:
    try:
        print("%.2f Lux"%sensor1.lux)
    except OSError:
        print ("error")
    try:
        print("%.2f Lux"%sensor2.lux)
    except OSError:
        print ("error")
    time.sleep(1)

